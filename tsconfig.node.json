{
  "$schema": "./tsconfig-schema.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,  // case-sensitive imports
     "strict": true                             //  strict type checking
  },
  "include": ["vite.config.ts"]
}
  